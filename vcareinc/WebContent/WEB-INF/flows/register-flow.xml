<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!-- <secured attributes="ROLE_USER"/> -->
	
	<input name="id"/>
	
	<decision-state id="registerOrLoginSuccess">
		<if then="signup" test="id==null" else="loginSuccess"/>
	</decision-state>
	
	<view-state id="signup" view="/WEB-INF/jsf/signin.xhtml" model="signup">
		<transition on="submit" to="loginAction"/>
		<transition on="goToRegister" to="register" bind="false"/>
	</view-state>
	
	<action-state id="loginAction">
		<evaluate expression="userService.loginUser(signup)"/>
		<transition on="success" to="completeRegisterForm"/>
		<transition on="fail" to="signup"/>
	</action-state>
	
	<view-state id="register" view="/WEB-INF/jsf/register.xhtml" model="register">
		<transition on="submit" to="saveRegister"/>
	</view-state>
	
	<action-state id="saveRegister">
		<evaluate expression="userService.saveRegister(register)"/>
		<transition to="viewProfile"/>
		<transition on-exception="com.vcareinc.exceptions.DBException" to="register"/>
	</action-state>
	
	<view-state id="viewProfile" view="/WEB-INF/jsf/userProfile.xhtml" model="register">
		<on-render>
			<evaluate expression="userService.findUser(register.email)" result="viewScope.userProfile"/>
		</on-render>
		<transition on="submit" to="completeRegisterForm"/>
	</view-state>
	
	<end-state id="completeRegisterForm"/>

</flow>