<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="oAuthCreditCard" class="com.paypal.core.rest.OAuthTokenCredential">
		<constructor-arg value="AUuHdhD3uwhx2asbrcogJxphG79G-3gVsP2Ya2Gq3rRxmKUaiowsP9xpMWEC"/>
		<constructor-arg value="EGefFRB-0BuvUQ5o-Hcvyrs5LvcGR8_iSMoDZ3N7HHjo2SfhPF-kQbF2hBWc"/>
		<constructor-arg ref="sdkConfig"/>
	</bean>

	<bean id="payPalUrl" class="java.lang.String">
		<constructor-arg value="https://api.sandbox.paypal.com"/>
	</bean>

	<bean id="sdkConfig" class="java.util.HashMap">
		<constructor-arg>
		    <map key-type="java.lang.String" value-type="java.lang.String">
		        <entry key="mode" value="sandbox"/>
		    </map>
		</constructor-arg>
	</bean>

